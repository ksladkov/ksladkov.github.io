html, body, p, div, span, textarea, input, button {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

textarea, input, button {
    font: inherit;
    outline: none;
}

body {
    font-family: 'Helvetica Neue', 'Roboto', 'Arial', sans-serif;
    font-size: 15px;
}

.input {
    display: block;

    &__label {
        display: block;
        margin-bottom: 5px;
    }

    input, textarea {
        display: block;
        width: 100%;
        max-width: 100%;
        padding: 6px 10px;
        border: 0;
        box-shadow: inset 0 0 0 1px #ccc;

        &:focus {
            box-shadow: inset 0 0 0 2px #fc0;
        }
    }

    input {
        height: 32px;
        line-height: 20px;
    }
}

.button {
    display: inline-block;
    background: #ffffff;
    border: 1px solid rgba(0,0,0,0.2);
    border-radius: 3px;
    padding: 6px 10px;
    cursor: pointer;
    line-height: 18px;

    &:hover, &:focus {
        border-color: rgba(0,0,0,0.35);
    }

    &:active {
        background: #f6f6f6;
    }

    &._action {
        background: #fd4;

        &:active {
            background: #fc0;
        }
    }
}

.page-rotate {
    padding: 20px;

    .controls {
        margin-top: 20px;
    }

    .input {
        margin-bottom: 10px;
    }

    textarea {
        min-height: 240px;
    }

    &__frame {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        display: none;
        border: 0;
        z-index: 20;
        background: white;
    }

    .button {
        margin-right: 10px;

        &[name="stop"] {
            display: none;
            position: fixed;
            z-index: 25;
            right: 10px;
            bottom: 10px;
            opacity: 0.1;
            &:hover {
                opacity: 1;
            }
        }
    }

    &[state="rotating"] {
        .page-rotate__frame {
            display: block;
        }

        .button {
            &[name="stop"] {
                display: block;
            }
        }
    }
}
